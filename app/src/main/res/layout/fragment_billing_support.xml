<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.colleges.BillingSupportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <!--        <com.google.android.material.tabs.TabLayout-->
            <!--            android:id="@+id/tabLayout"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:background="@color/colorSilver">-->
            <!--        </com.google.android.material.tabs.TabLayout>-->

            <!--        <androidx.viewpager.widget.ViewPager-->
            <!--            android:id="@+id/viewPager"-->
            <!--            android:layout_below="@id/tabLayout"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            tools:layout_editor_absoluteX="8dp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="If your institution is interested in joining the Prepps community, you can try a membership for 3 months FREE (no conract).\n\n
We then offer a monthly membership plan for colleges and universities. Prospective students are here waiting to speak with you. Increase your online connections with Prepps.\n\n\n
Monthly Plans: (Cancel Anytime)
"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:textSize="14dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/simpleTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1"> <!-- stretch the second column of the layout-->

                    <!-- first row of the table layout-->
                    <TableRow

                        android:id="@+id/firstRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="18dip"
                            android:background="@drawable/cell_rectangle_background"
                            android:text="Membership\n($199/month)"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textStyle="bold"
                            android:text="Plus Membership\n($399/month)"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textStyle="bold"
                            android:text="Premier\nMembership\n($499)"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </TableRow>

                    <TableRow

                        android:id="@+id/secondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="18dip"
                            android:background="@drawable/cell_rectangle_background"
                            android:text="includes:"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:text="basic membership plus:"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:text="plus membership\nwith:"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </TableRow>

                    <TableRow

                        android:id="@+id/thirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="18dip"
                            android:background="@drawable/cell_rectangle_background"
                            android:text="Direct Messaging\nwith prospective students"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:text="Ability to place video\nads on public timeline"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:text="Direct ads to\nstudent emails"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </TableRow>

                    <TableRow

                        android:id="@+id/forthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="18dip"
                            android:background="@drawable/cell_rectangle_background"
                            android:text="Students gain access to\none-click 'request info'\non your page"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </TableRow>

                    <TableRow

                        android:id="@+id/fifthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="18dip"
                            android:background="@drawable/cell_rectangle_background"
                            android:text="Ability to send\n'Invite to Apply'"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_rectangle_background"
                            android:padding="18dip"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="13dp"
                    android:text="Email "/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:autoLink="email"
                    android:textSize="13dp"
                    android:text="Support@Prepps.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="13dp"
                    android:text=" for info."/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>