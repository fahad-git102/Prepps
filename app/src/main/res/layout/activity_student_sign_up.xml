<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:tint="@color/colorBlue"
        android:id="@+id/goBack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorDarkGrey"
        android:id="@+id/mainheading"
        android:textSize="24sp"
        android:fontFamily="@font/cera_pro_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter your Info"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkGrey"
        android:id="@+id/heading"
        android:layout_below="@id/mainheading"
        android:textSize="21sp"
        android:fontFamily="@font/cera_pro_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Required)"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkGrey"
        android:layout_marginTop="4dp"
        android:id="@+id/type"
        android:layout_below="@id/heading"
        android:textSize="13sp"
        android:fontFamily="@font/cera_pro_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/type"
        android:id="@+id/required"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:padding="13dp"
            android:textSize="14sp"
            android:id="@+id/etName"
            android:hint="Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:id="@+id/etEmail"
            android:hint="Email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:inputType="textPassword"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etPassword"
            android:hint="Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etState"
            android:hint="City and State"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etHighSchool"
            android:hint="High School"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/type"
        android:visibility="gone"
        android:layout_above="@id/btnSkip"
        android:id="@+id/optional"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etGPA"
            android:hint="GPA"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:textSize="14sp"
            android:id="@+id/etAwards"
            android:hint="Awards"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etExtraActivity"
            android:hint="Extracurricular Activities"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:padding="13dp"
            android:id="@+id/etClubs"
            android:hint="Clubs"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:textSize="14sp"
            android:id="@+id/etPrograms"
            android:hint="Careers Iâ€™m considering"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:id="@+id/etHeight"
            android:hint="Height (in Inches)"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:id="@+id/etWeight"
            android:hint="Weight (in Kgs)"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Do you play a sport ?"
            android:layout_marginRight="15dp"
            android:id="@+id/checkbox_sports"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSportsName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:textColor="@color/colorBlue"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NEXT"
        android:textColor="@color/colorBlue"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SAVE"
        android:textColor="@color/colorBlue"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SKIP"
        android:textColor="@color/colorGreen"
        android:visibility="gone"
        android:id="@+id/btnSkip"
        android:layout_toLeftOf="@id/btnSave"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textSize="22dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorDarkFaded"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>